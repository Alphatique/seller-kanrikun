{
	"name": "seller-kanrikun",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"workspaces": [
	  "frontend",
	  "backend",
	  "packages/*"
	],
	"scripts": {
		"dev": "remix vite:dev",
		"build": "remix vite:build",
		"start": "wrangler pages dev",
		"deploy": "bun run build && wrangler pages deploy",
		"typecheck": "tsc",
		"cf-typegen": "wrangler types",
		"format": "biome check --fix --unsafe",
		"db:push": "dotenv -e .env.development.local -- drizzle-kit push",
		"db:studio": "dotenv -e .env.development.local -- drizzle-kit studio"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
