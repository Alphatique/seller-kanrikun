{
	"compilerOptions": {
		"lib": ["ES2022"],
		"isolatedModules": true,
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "Bundler",
		"target": "ES2022",
		"strict": true,
		"allowJs": false,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true
	},
	"include": ["./src", "drizzle.config.ts"]
}
